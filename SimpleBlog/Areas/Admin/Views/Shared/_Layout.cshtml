@using System.Web.Optimization
@{
    Layout = null;
}

@helper SelecteTabClas(string tabName)
{
    if (tabName == ViewBag.SelectedTab)
    {
        @: active
    }
}
<!DOCTYPE html>

<html>
<head>
    <title>Simple Blog Admin</title>
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">*@
    @Styles.Render("~/admin/styles")
</head>
<body>
    <div class="container">
        <ul class="nav">
            <li class="@SelecteTabClas("posts")">
                @Html.ActionLink("Posts", "Index", "Posts", new { area = "admin" }, new {  @class = "list-group-item" })
            </li>
            <li class="@(ViewBag.SelectedTab == "users" ? "active" : "")">
                @Html.ActionLink("Users", "Index", "Users", new { area = "admin" }, new { @class = "list-group-item" })
            </li>
            <li>
                @Html.RouteLink("Back to Website", "Home", "", new { @class = "list-group-item" })
            </li>
        </ul>

        @RenderBody()
    </div>



    <h1>THis is the admin !!!</h1>
  
    @Scripts.Render("~/admin/scripts")

    @RenderSection("Scripts", false)

</body>
</html>

